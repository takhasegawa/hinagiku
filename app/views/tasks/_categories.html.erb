<% action = (params[:action] == "done") ? :done : nil %>
<ul id="categories">
<% if @category %>
  <li><%= link_to "全部" , [action, :tasks] %></li>
<% else %>
  <li class="selected">全部</li>
<% end %>
<% Category.all.each do |c| %>
  <% if @category == c %>
    <li class="selected"><%= c.name %></li>
  <% else %>
    <li><%= link_to c.name, [action, c, :tasks] %></li>
  <% end %>
<% end %>
</ul>