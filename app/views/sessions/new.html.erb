<%= form_tag :session do %>
  <ul>
    <li>
      <%= label_tag :login_name, "ユーザーID" %>
      <%= text_field_tag :login_name, params[:login_name] %>
    </li>
    <li>
      <%= label_tag :password, "パスワード" %>
      <%= password_field_tag :password %>
    </li>
    <li style="text-align:center">
      <%= check_box_tag :remember_me %>
      <%= label_tag :remember_me, "次回から自動的にログイン", :class => "plain" %>
    </li>
    <li class="buttons">
      <%= submit_tag "ログイン" %>
    </li>
  </ul>
<% end %>